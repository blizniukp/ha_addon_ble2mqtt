{
  "name": "Bluetooth LE to MQTT",
  "version": "0.1.0",
  "slug": "ble2mqtt",
  "description": "Bluetooth LE to Mqtt gateway",
  "arch": ["armhf", "armv7", "amd64", "aarch64", "i386"],
  "startup": "application",
  "host_network" : true,
  "boot": "auto",
  "options": {
  	"address": "homeassistant",
  	"port": 1883,
  	"qos": 1,
    "username": "mqttuser",
    "password": "mqttpassword",
    "anonymous": false,
    "sub_topic": "/ble2mqtt/app/#",
    "pub_topic": "/ble2mqtt/dev/",
    "devices": []
  },
  "schema": {
  	"address": "str",
  	"port": "int",
  	"qos": "int",
    "username": "str",
    "password": "str",
    "anonymous": "bool",
    "sub_topic": "str",
    "pub_topic": "str",
    "devices": [
    	{
    		"name": "str",
    		"address": "str",
    		"address_type": "str",
    		"service_uuid": "str",
    		"char_uuid": "str"
    	}
    ]
  },
  "discovery": ["mqtt"]
}